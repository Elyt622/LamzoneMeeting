<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AddMeetingActivity"
    android:orientation="vertical"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_view_meeting_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edit_text_meeting_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Nom de la réunion"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_meeting_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salle de réunion"
                android:textSize="18sp" />
            <Spinner
                android:id="@+id/spinner_meeting_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_view_meeting_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sujet de la réunion"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_text_subject_meeting"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Sujet de la réunion"
            android:inputType="text" />

        <TextView
            android:id="@+id/text_view_date_meeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date de la réunion"
            android:textSize="18sp" />

        <DatePicker
            android:id="@+id/date_picker_add_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TimePicker
            android:id="@+id/time_picker_add_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <MultiAutoCompleteTextView
            android:id="@+id/edit_text_email_user_meeting"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Ex: contact@lamzone.com"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/button_add_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter participant" />

        <Button
            android:id="@+id/button_add_meeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="Ajouter la réunion" />

    </LinearLayout>
</ScrollView>

